{% if root.folders is not defined or not root.private %}
	{% if root.folders is defined %}
		{% set type = 'folder' %}
	{% elseif root.address is defined %}
		{% set type = 'link' %}
	{% else %}
		{% set type = 'file' %}
	{% endif %}

	{% if root.folders is defined and root.folders|length == 0  and root.files|length == 0 %}
		{% set full = 'empty' %}
	{% else %}
		{% set full = '' %}
	{% endif %}

	<li class="{{type}} {{full}}">
		{% if root.folders is defined %}
			{{ root.name }}
		{% elseif root.address is defined %}
			<a href="{{ root.address }}">{{root.name}}</a>
		{% else %}
			<a href="{{ path('download', {'id' : root.id}) }}"> {{root.name}} </a>
		{% endif %}
	</li>


	{% if root.folders is defined and (root.files|length > 0 or root.folders|length > 0) %}
		<ul>
			{% for folder in root.folders %}
				{% include 'BioPublicBundle:Content:structure.html.twig' with {'root' : folder} %}
			{% endfor %}

			{% for file in root.files %}
				{% include 'BioPublicBundle:Content:structure.html.twig' with {'root' : file} %}
			{% endfor %}

			{% for link in root.links %}
				{% include 'BioPublicBundle:Content:structure.html.twig' with {'root' : link} %}
			{% endfor %}
		</ul>
	{% endif %}
{% endif %}