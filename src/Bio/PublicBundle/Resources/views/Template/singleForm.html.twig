{% extends 'BioPublicBundle::main.html.twig' %}

{% block head %}
	{{parent()}}
		{% javascripts 'bundles/bioexam/js/Loader.js'
					   'bundles/bioexam/js/Parser.js'
					   'bundles/bioexam/js/Lister.js'
					   'bundles/bioexam/js/Notify.js' output="js/*.js" %}
			<script src="{{asset_url}}"></script>
		{% endjavascripts %}
{% endblock %}

{% block content %}
	{{ form(form) }}
{% endblock %}

{% block java %}
	<script>
	var loader = new Loader({
		'url': '{{ url('main_page')}}crud/',
		'bundle': 'info',
		'entity': 'info',
		'container' : undefined,
		'buttons': undefined,
		'listeners': [
			{
				'selector': null,
				'event': 'init',
				'fn': function(event, object, self) {
					self.sendRequest(self.generateUrl('global'), null, function(event, self) {
						console.log(this);
						self.notify.ready();
						if (this.success) {
							self.forms.open('set');
							self._handleForm(this.form);
							self.notify.ready();
						} else {
							self.notify.failure(this.message);
						}
					});
				}
			}
		],
		'form': {
			'container': undefined,
			'form': document.querySelector('form'),
			'settings': {
				'set': {
					'before': function() {
						// do nothing
					},
					'onsubmit': function(event, container, self) {
						event.preventDefault();
						self.notify.wait();
						self.postForm(null, this, function(event, self) {
							if (this.success) {
								self.notify.success('Saved settings.');
							} else {
								self.notify.failure(this.message);
							}
						});
					},
					'after': function() {
						// never will be closed
					}
				}
			}
		}
	}); </script>
{% endblock %}