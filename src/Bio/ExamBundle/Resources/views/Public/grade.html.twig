{% extends 'BioExamBundle:Public:main.html.twig' %}

{% block head %}
	{{ parent() }}
	{% stylesheets 'bundles/bioexam/css/exam.css' filter="cssrewrite" output="css/*.css" %}
		<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block content %}
	<form method="POST">
		{% for question in exam.questions %}
			<div class="question tableStyle">
				<h2 style="float:left;">Question {{loop.index}}</h2> <h2 style="float:right;">{{question.points}} points</h2>
				<div class="q">
					{{ question.question|raw }}
				</div>
				<div class="line"></div>
				<h2>Answer</h2>
				<div class="a review">
					<div class="score">
						<select required="required" name="{{question.id}}">
							<option selected="selected" disabled="disabled">-</option>
							 {% for i in 0..question.points %}
							 	<option val={{i}}>{{i}}</option>
							 {% endfor %}
						</select>
					</div>
					<textarea disabled="disabled" style="width:84%;">{% if question.id in taker.answers|keys %}{{ taker.answers[question.id] }}{% endif %}</textarea>
				</div>
				<div class="line"></div>
				<h2>Rubric</h2>
				<div class="a">
					{{question.answer|raw}}
				</div>
			</div>
		{% endfor %}
		<div id="submit" >
			<button type="submit" />Submit</button>
		</div>
	</form>
	{{parent()}}
	{% include 'BioExamBundle:Public:timer.html.twig' %}
{% endblock %}

