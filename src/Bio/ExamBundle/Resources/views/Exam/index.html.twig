{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Exam list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Section</th>
                <th>Tdate</th>
                <th>Tstart</th>
                <th>Tend</th>
                <th>Tduration</th>
                <th>Gdate</th>
                <th>Gstart</th>
                <th>Gend</th>
                <th>Gduration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('exam_exam_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.section }}</td>
                <td>{% if entity.tDate %}{{ entity.tDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.tStart }}</td>
                <td>{{ entity.tEnd }}</td>
                <td>{{ entity.tDuration }}</td>
                <td>{% if entity.gDate %}{{ entity.gDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.gStart }}</td>
                <td>{{ entity.gEnd }}</td>
                <td>{{ entity.gDuration }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('exam_exam_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('exam_exam_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('exam_exam_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
