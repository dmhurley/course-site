{% extends 'BioStyleBundle:Default:main.html.twig' %}

{% block head %}
	{{ parent() }}
	{% stylesheets 'bundles/biotrip/css/trip.css' filter="cssrewrite" output="css/*.css" %}
		<link rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block content %}
	<div style="float:left; width:42%;">
		<h4>Add Trip</h4>
		{{ form(form) }}
	</div>
	<div style="float:left; width: 58%;">
		<h4>Global Settings</h4>
		{{ form(globalForm) }}
	</div>

	<table>
		<tr>
			<th>Trip</th>
			<th>Summary</th>
			<th>Start</th>
			<th>End</th>
			<th>Spots Taken</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
		{% for trip in trips %}
			<tr>
				<td>{{ trip.title }}</td>
				<td>{{ trip.shortSum }}</td>
				<td>{{ trip.start|date('d-m-y H:i:s') }}</td>
				<td>{{ trip.end|date('d-m-y H:i:s') }}</td>
				<td>{{ trip.students|length }}/{{trip.max}}</td>
				<td><a href="{{ path('edit_trip', {'id':trip.id}) }}">edit</a></td>
				<td><a href="{{ path('delete_trip', {'id':trip.id}) }}">delete</a></td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}