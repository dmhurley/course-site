{% extends 'BioSwitchBundle:Default:main.html.twig' %}

{% block content %}
	{{ form_start(form) }}
		<div id="form" class="tableStyle">
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Name</th>
						<th>Day</th>
						<th>Start</th>
						<th>End</th>
					</tr>
				</thead>
				<tbody>
					{% for choice in form.children['match'].vars.choices %}
					<tr>
						<td><input type="radio" name="form[match]" value={{choice.value}} ></td>
						<td>{{choice.data.current.name}}</td>
						<td>{{choice.data.current.day}}</td>
						<td>{{choice.data.current.start|date('h:i a')}}</td>
						<td>{{choice.data.current.end|date('h:i a')}}</td>
					</tr>
					{% endfor %}
				</tbody>
				{% if form.children['match'].vars.choices|length == 0 %}
					<tfoot>
						<tr>
							<td colspan=5 style="text-align:center;">No matches found</td>
						</tr>
					</tfoot>
				{% endif %}
			</table>
			{% do form_row(form.match) %}
			{{form_row(form.submit)}}
		</div>
	{{ form_end(form) }}
{% endblock %}