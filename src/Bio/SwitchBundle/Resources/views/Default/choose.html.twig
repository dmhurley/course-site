{% extends 'BioSwitchBundle:Default:main.html.twig' %}

{% block content %}
	<p>Select all sections you would like to switch into. To cancel your request click <a href="?cancel">here</a></p>
	{{ form_start(form) }}
		<div id="form" class="tableStyle">
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Section</th>
						<th>Day</th>
						<th>Start</th>
						<th>End</th>
					</tr>
				</thead>
				<tbody>
					{% for choice in form.children['want'].vars.choices if request.current != choice.data %}
					<tr>
						<td><input type="checkbox" name="form[want][]" value={{choice.value}} ></td>
						<td>{{choice.data.name|upper}}</td>
						<td>{{choice.data.day|capitalize}}</td>
						<td>{{choice.data.start|date('h:i a')}}</td>
						<td>{{choice.data.end|date('h:i a')}}</td>
					</tr>
					{% else %}
						<tr><td colspan=5 style="text-align:center;">no other sections</td></tr>
					{% endfor %}
				</tbody>
			</table>
			{% do form_row(form.want) %}
			{{form_row(form.request)}}
		</div>
	{{ form_end(form) }}
	{{parent()}}
{% endblock %}