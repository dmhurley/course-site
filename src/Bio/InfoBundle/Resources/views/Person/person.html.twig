{% extends 'BioPublicBundle::main.html.twig' %}

{% block content %}
	{{ form(form) }}

	<table>
		<tr>
			<th>First - Last</th>
			<th>Email</th>
			<th>Building</th>
			<th>Room</th>
			<th>Title</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
		{% for person in entities %}
			<tr>
				<td>{{ person.fullName }}</td>
				<td>{{person.email}}</td>
				<td><a href="http://www.washington.edu/maps/?{{person.bldg|default("	")|split("	")[0]}}">{{person.bldg|default('</a>no building<a>')|safe}}</a></td>
				<td>{{person.room|default('no room')}}</td>
				<td>{{person.title|title}}</td>
				<td><a href="{{ internal('edit', {'entityName' : 'person', 'id' : person.id}) }}">edit</a></td>
				<td><a href="{{ internal('delete', {'entityName' : 'person', 'id' : person.id}) }}">delete</a></td>
			</tr>
		{% else %}
			<tr><td colspan=7 style="text-align:center">no people</td></tr>
		{% endfor %}
	</table>
{% endblock %}